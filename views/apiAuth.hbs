<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            height: 100vh;
            background: antiquewhite;
        }

        .container {
            height: 100%;
        }
    </style>
</head>

<body>

    <div class="container d-flex align-items-center justify-content-center">
        <div class="w-50">
            {{!-- add card --}}


            <div class="card" style="background: cornsilk; border-radius:20px;">
                <div class="card-body">
                    <h4 class="text-center">Your Api Key</h4>
                    <p class="card-text text-center">{{apiKey}}</p>
                 
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button class="btn btn-primary" id="copyToClipBoardId" onclick="copyToClipboard()">
                            Copy to clipboard 
                        </button>
                    </div>
                    <p class="mx-3 mt-2"> Note : {{message}} </p>
                    {{!-- go to home --}}
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <a href="/" class="text-center">Go to Home</a>
                    </div>  
                </div>
            </div>
            {{!-- <p>{{apiKey}}</p> --}}

        </div>
    </div>


    <script>
        const apiKey = document.querySelector('p').innerText;
        localStorage.setItem('apiKey', apiKey); 

        const copyToClipBoardId = document.querySelector('#copyToClipBoardId');
        // copy to clipboard function
        function copyToClipboard() {
            const el = document.createElement('textarea');
            el.value = apiKey;
            document.body.appendChild(el);
            el.select();
            document.execCommand('copy');
            document.body.removeChild(el);
            //alert('Copied to clipboard');
            // button text change to copied and color change to green
            copyToClipBoardId.innerText = 'Copied';
            copyToClipBoardId.classList.add('btn-success');


        }

    // navigator.clipboard.writeText(apiKey);


    </script>
</body>

</html>